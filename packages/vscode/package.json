{
	"name": "vscode-protobuf-to-typescript",
	"displayName": "Protobuf To Typescript",
	"description": "Convert protobuf struct to typescript type",
	"version": "0.0.5",
	"private": true,
	"icon": "icon.png",
	"publisher": "yishi",
	"license": "MIT",
	"engines": {
		"vscode": "^1.38.0"
	},
	"categories": [
		"Other"
	],
	"repository": {
		"type": "git",
		"url": "git@github.com:kukudeshiyi/vscode-protobuf-to-typescript.git"
	},
	"activationEvents": [
		"onCommand:pbToTypescript.fromSelection",
		"onCommand:pbToTypescript.fromClipboard"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "pbToTypescript.fromSelection",
				"title": "from selection",
				"category": "pbts"
			},
			{
				"command": "pbToTypescript.fromClipboard",
				"title": "from clipboard",
				"category": "pbts"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run -S esbuild-base -- --minify",
		"postinstall": "patch-package",
		"esbuild-base": "rimraf out && esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
		"build": "npm run -S esbuild-base -- --sourcemap",
		"watch": "npm run -S esbuild-base -- --sourcemap --watch",
		"pretest": "npm run build && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/copy-paste": "^1.1.30",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.38.0",
		"@typescript-eslint/eslint-plugin": "^5.12.1",
		"@typescript-eslint/parser": "^5.12.1",
		"@vscode/test-electron": "^2.1.2",
		"esbuild": "^0.14.39",
		"eslint": "^8.9.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.1",
		"patch-package": "^6.4.7",
		"typescript": "^4.5.5",
		"rimraf": "^3.0.2"
	},
	"dependencies": {
		"@pbts/core": "^2.0.2",
		"copy-paste": "^1.3.0"
	}
}
